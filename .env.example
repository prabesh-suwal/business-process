# ==============================================================================
# Growphase Docker Deployment — Environment Variables
# ==============================================================================
# Copy to .env on the server and fill in actual values
# ==============================================================================

VITE_GATEWAY_URL=


# ─── GHCR Registry ───
REGISTRY=ghcr.io/growphasetech/business-process
TAG=latest
GHCR_TOKEN=
GHCR_USER=

# ─── PostgreSQL (running on host) ───
DB_HOST=host.docker.internal
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=

# ─── Redis ───
REDIS_HOST=redis
REDIS_PORT=6379

# ─── Consul ───
CONSUL_HOST=consul
CONSUL_PORT=8500

# ─── MinIO ───
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin123

# ─── CAS / Auth ───
CAS_ISSUER=http://cas-server:9000
COOKIE_DOMAIN=
COOKIE_SECURE=false

# ─── CORS Origins (set to your server's public URL) ───
CORS_ORIGIN_MEMO_UI=http://YOUR_SERVER_IP:3001
CORS_ORIGIN_ADMIN_UI=http://YOUR_SERVER_IP:3002

# ─── Email (notification-service) ───
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@example.com
